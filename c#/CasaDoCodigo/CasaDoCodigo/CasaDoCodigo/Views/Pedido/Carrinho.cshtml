
@{
    ViewData["Title"] = "Carrinho";
}

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-6">Item</div>
            <div class="col-lg-2">Preço unitário</div>
            <div class="col-lg-2">Quantidade</div>
            <div class="col-lg-2">
                <span class="pull-right">
                    Subtotal
                </span>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3">
                <img src="~/images/produtos/large_4.jpg" />
            </div>
            <div class="col-lg-3">REST</div>
            <div class="col-lg-2">R$ 70,00</div>
            <div class="col-lg-2">3</div>
            <div class="col-lg-2">
                <span class="pull-right">R$ 210,00</span>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-lg-10">Total: 4 itens</div>
            <div class="col-lg-2">
                <span class="pull-right">
                    R$ 210,00
                 </span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success pull-right" asp-controller="pedido" asp-action="resumo">Finalizar Pedido</a>
    </div>
</div>
