
@{
    ViewData["Title"] = "Carrinho";
}

<!-- declarar o modelo de dados da página -->
@model CarrinhoViewModel

<h3>Meu Carrinho</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-6">Item</div>
            <div class="col-lg-2 text-center">Preço unitário</div>
            <div class="col-lg-2 text-center">Quantidade</div>
            <div class="col-lg-2">
                <span class="pull-right">
                    Subtotal
                </span>
            </div>
        </div>
    </div>
    <div class="panel-body">
        @foreach (var item in Model.Itens)
        {
            <div class="row row-center">
                <div class="col-lg-3">
                    <img src="~/images/produtos/large_@(item.Produto.Id).jpg" />
                </div>
                <div class="col-lg-3">@item.Produto.Nome</div>
                <div class="col-lg-2 text-center">R$ @item.PrecoUnitario</div>
                <div class="col-lg-2 text-center">@item.Quantidade</div>
                <div class="col-lg-2">
                    <span class="pull-right">R$ @item.Subtotal</span>
                </div>
            </div>
        }
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-lg-10">Total: @Model.Itens.Count @(Model.Itens.Count > 1 ? "itens" : "item") </div>
            <div class="col-lg-2">
                <span class="pull-right">
                    Total: R$ @Model.Total
                </span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success pull-right" asp-controller="pedido" asp-action="resumo">Finalizar Pedido</a>
    </div>
</div>
